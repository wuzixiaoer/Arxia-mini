/* pages/index/index.wxss */
.page-body{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction:column;
  justify-content:space-around;
  align-items: center;
  background: #333333;
}

.logo {
  display: flex;
  flex-direction:column;
  align-items: center;
}
.logo-img{
  width: 258rpx;
  height: 80rpx;
}

.logo-text{
  color: #656565;
  margin-top: 30rpx;
  font-size: 24rpx;
  font-weight: 800;
  letter-spacing:2rpx;
  font-family: Sukhumvit Set;
}

.circle-btn{
  width: 172rpx;
  height: 172rpx;
  border-radius:172rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 8px 2px rgba(135,135,135,0.50);
  font-size: 32rpx;
  background-image: linear-gradient(35deg, #C8C8C8 45%, #FFADB9 100%);
  font-weight: 600;
  letter-spacing:2rpx;
  font-family: Sukhumvit Set;
  opacity: 0.5;
} 

